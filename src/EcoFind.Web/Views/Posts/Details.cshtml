@model EcoFind.Application.Features.Posts.Queries.GetPostBySlug.GetPostBySlugQueryResponse

@{
    ViewData["Title"] = Model.Title;
}

<div class="container my-4">
    <h1>@Model.Title</h1>
    <p class="text-muted">
        <strong>By:</strong> @Model.Author &nbsp;|&nbsp;
        <strong>Published on:</strong> @Model.PublishedDate?.ToString("MM/dd/yyyy")
    </p>
    <hr />
    <div class="post-content">
        @Html.Raw(Model.Content)
    </div>
</div>
