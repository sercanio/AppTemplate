{
  "AllowedOrigins": [ "http://localhost:4173", "http://localhost:5173", "https://localhost:5173" ],
  "ConnectionStrings": {
    "Database": "Host=apptemplate-postgres;Port=5432;Database=AppTemplateDb;Username=postgres;Password=postgres",
    "Redis": "apptemplate-redis:6379"
  },
  "Jwt": {
    "Secret": "your-super-secure-secret-key-at-least-32-characters-long",
    "Issuer": "AppTemplate",
    "Audience": "AppTemplate-Users",
    "ExpiryInMinutes": "5",
    "RefreshTokenExpiryInDays": "7",
    "RememberMeTokenExpiryInDays": "30"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName",
      "WithProcessId"
    ],
    "Properties": {
      "Application": "AppTemplate"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://apptemplate-seq:5341",
          "apiKey": "",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "restrictedToMinimumLevel": "Debug",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AzureCommunicationService": {
    "ConnectionString": "",
    "FromEmail": ""
  },
  "Outbox": {
    "IntervalInSeconds": 5,
    "BatchSize": 10
  },
  "Authentication": {
    "Cookie": {
      "SameSite": "Strict",
      "Secure": true
    }
  }
}
