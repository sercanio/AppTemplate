{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "TestCoverage": {
    "IntervalHours": 24,
    "OutputDirectory": "coverage-reports",
    "RunOnce": false,
    "GenerateHtmlReport": true,
    "GenerateJsonSummary": true,
    "ExcludePatterns": [
      "[*.Tests]*",
      "[*]*Program",
      "[*]*Startup"
    ]
  }
}